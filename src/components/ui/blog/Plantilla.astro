---
import Layout from "../../../layouts/Layout.astro";
interface Props {
  titulo: string;
}

const { titulo } = Astro.props;
---

<Layout
  title="Blog Tech - Introduccion Docker"
  description="Introduccion a Docker para principiantes."
>
  <section
    class="font-sans antialiased min-h-screen relative overflow-x-hidden selection:bg-purple-200 selection:text-purple-900 bg-[#f8f9fa] dark:bg-gray-900 pb-24"
  >
    <div class="relative z-10 w-full max-w-4xl mx-auto px-4 py-12 md:py-16">
      <div
        class="bg-white rounded-xl dark:bg-gray-800 shadow-lg border border-gray-200 dark:border-gray-700 overflow-hidden"
      >
        <div
          class="bg-gray-50 border-b dark:border-gray-700 border-gray-100 dark:bg-gray-800 px-4 py-3 flex items-center gap-4"
        >
          <div class="flex gap-2">
            <div
              class="w-3 h-3 rounded-full bg-[#FF5F56] border border-[#E0443E]"
            >
            </div>
            <div
              class="w-3 h-3 rounded-full bg-[#FFBD2E] border border-[#DEA123]"
            >
            </div>
            <div
              class="w-3 h-3 rounded-full bg-[#27C93F] border border-[#1AAB29]"
            >
            </div>
          </div>
          <div class="font-mono text-xs text-gray-400 select-none">
            {titulo}
          </div>
        </div>
        <div class="p-8 md:p-16 max-w-5xl mx-auto">
          <slot />
        </div>
      </div>
    </div>
  </section>
</Layout>
