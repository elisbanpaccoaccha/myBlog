---
import { User } from "@lucide/astro";
interface Props {
  autor: string;
  imagen?: string | undefined;
  descripcion: string;
  twitter?: string;
  github?: string;
  linkedin?: string;
}

const { autor, imagen, descripcion, twitter, github, linkedin } = Astro.props;
---

<div
  class="mb-16 p-6 md:p-8 bg-gray-50/80 dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-2xl flex flex-col md:flex-row items-center md:items-start gap-6 text-center md:text-left"
>
  <div class="relative shrink-0">
    {
      imagen ? (
        <img
          alt={autor}
          class="w-20 h-20 rounded-full border-4 border-white dark:border-gray-700 shadow-sm object-cover grayscale hover:grayscale-0 transition-all duration-300"
          src={imagen}
        />
      ) : (
        <User size={60} />
      )
    }
    <div
      class="absolute bottom-0 right-0 w-5 h-5 bg-green-500 border-2 border-white dark:border-gray-700 rounded-full"
    >
    </div>
  </div>

  <div class="flex-1 flex flex-col justify-center">
    <h3 class="font-bold text-gray-900  dark:text-gray-50 text-lg font-sans">{autor}</h3>
    <p
      class="text-gray-600 dark:text-gray-400 text-sm leading-relaxed mt-2 mb-4 font-sans max-w-xl"
    >
      {descripcion}
    </p>
    <div class="flex items-center justify-center md:justify-start gap-5">
      {
        github && (
          <a
            aria-label="Github"
            class="text-gray-400 dark:text-gray-500 hover:text-gray-900 dark:hover:text-gray-100 transition-colors"
            href={github}
          >
            <svg
              class="w-5 h-5 fill-current"
              viewBox="0 0 24 24"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path d="M12 0C5.37 0 0 5.373 0 12c0 5.303 3.438 9.8 8.205 11.385.6.113.82-.258.82-.577 0-.285-.01-1.04-.015-2.04-3.338.724-4.042-1.61-4.042-1.61-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.838 1.236 1.838 1.236 1.07 1.835 2.809 1.305 3.495.998.108-.776.42-1.305.763-1.605-2.665-.3-5.466-1.332-5.466-5.93 0-1.31.465-2.38 1.235-3.22-.135-.303-.54-1.523.105-3.176 0 0 1.005-.322 3.3 1.23.96-.267 1.98-.399 3-.405 1.02.006 2.04.138 3 .405 2.28-1.552 3.285-1.23 3.285-1.23.645 1.653.24 2.873.12 3.176.765.84 1.23 1.91 1.23 3.22 0 4.61-2.805 5.625-5.475 5.92.42.36.81 1.096.81 2.22 0 1.606-.015 2.896-.015 3.286 0 .315.21.69.825.57C20.565 21.795 24 17.3 24 12c0-6.627-5.373-12-12-12" />
            </svg>
          </a>
        )
      }

      {
        twitter && (
          <a
            aria-label="X (Twitter)"
            class="text-gray-400 dark:text-gray-500 hover:text-gray-900 dark:hover:text-gray-100 transition-colors"
            href={twitter}
          >
            <svg
              class="w-5 h-5 fill-current"
              viewBox="0 0 24 24"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path d="M18.901 1.153h3.68l-8.04 9.19L24 22.846h-7.406l-5.8-7.584-6.638 7.584H.474l8.6-9.83L0 1.154h7.594l5.243 6.932ZM17.61 20.644h2.039L6.486 3.24H4.298Z" />
            </svg>
          </a>
        )
      }

      {
        linkedin && (
          <a
            aria-label="LinkedIn"
            class="text-gray-400 dark:text-gray-500 hover:text-gray-900 dark:hover:text-gray-100 transition-colors"
            href={linkedin}
          >
            <svg
              class="w-5 h-5 fill-current"
              viewBox="0 0 24 24"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z" />
            </svg>
          </a>
        )
      }
    </div>
  </div>
</div>
