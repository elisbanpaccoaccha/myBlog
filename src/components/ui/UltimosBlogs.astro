---
interface Props {
  imagen?: string;
  titulo: string;
  descripcion: string;
  link: string;
}

const { imagen, titulo, descripcion, link } = Astro.props;
---

<a
  class="group block bg-surface-light dark:bg-surface-dark rounded-xl border border-slate-200 dark:border-slate-800 overflow-hidden hover:border-primary dark:hover:border-primary transition-colors"
  href={link}
>
  {
    imagen ? (
      <img
        alt="Miniatura del post del blog"
        class="w-full h-48 object-cover"
        src={imagen}
      />
    ) : (
      <img
        alt="Miniatura del post del blog"
        class="w-full h-48 object-cover"
        src="https://lh3.googleusercontent.com/aida-public/AB6AXuBhtHk-3ZR2NZ5-Ey6qy22deDHsfuKhdyZ3Z0EQpBjbyqqBk2r3CoOcg1QU73tbkJHUTYHBx97LIOw1aB3jX0rIhECEsIuLak1jT6N4I_QLuFkRyUFrhirGrpLpoTgpAUYWq6cNS6h846bLv6rIfdLDibifY5HShfVZ_RSzx4I8ZnRW10Fvw2GZ9uFPP7PXj8mlw8TdwxXRdWvSLsnEuhuS5plmj9_qLJo4eWUJmWWzFvuOO7-06FxhyX8okPSB5aR5xhuG2ExNBBo"
      />
    )
  }

  <div class="p-6">
    <h3
      class="text-lg font-semibold mb-2 text-on-surface-light dark:text-on-surface-dark group-hover:text-primary transition-colors"
    >
      {titulo}
    </h3>
    <p class="text-sm text-muted-light dark:text-muted-dark line-clamp-2">
      {descripcion}
    </p>
  </div>
</a>
